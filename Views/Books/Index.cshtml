@model IEnumerable<ZamowKsiazke.Models.Book>

@{
    ViewData["Title"] = "Indeks";

    string HasImage(ZamowKsiazke.Models.Book book)
    {
        if (!string.IsNullOrEmpty(book.ImageUrl))
        {
            return "fa-solid fa-check text-success";
        }
        else
        {
            return "fa-solid fa-x text-danger";
        }
    }
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Indeks</h1>

    <p class="text-center">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-book"></i> Dodaj książkę
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center">
            <thead class="thead-light">
                <tr>
                    <th>Tytuł</th>
                    <th>Autor</th>
                    <th>Język</th>
                    <th>ISBN</th>
                    <th>Data publikacji</th>
                    <th>Cena</th>
                    <th>Ma obraz</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Title)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Author)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Language)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.ISBN)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.DatePublished)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Price)</td>
                        <td class="align-middle"><i class="@HasImage(item)"></i></td>
                        <td class="align-middle">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm"><i class="fa-solid fa-circle-info"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
